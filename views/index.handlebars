            <div class="row" id="layoutbtns">
                <p>ID: {{this.id}} - - - - - </p>
                <p>Category: - </p>
                <p class="categoryH" id="{{this.id}}categoryText">{{this.category}}</p>
                <button class="delete-btn" data-id={{this.id}}>Delete<span></span></button>
